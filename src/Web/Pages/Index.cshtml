@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
     Layout = "_LayoutApp";
}
<div class="container-fluid py-4">
      <div class="row">
        <div class="col-12 mt-4">
            <div class="card"> 
              <div class="mb-5 ps-3">
                <h6 class="mb-1 py-4">The bigest collections:</h6>
              </div>
              <div class="row">
                @foreach (var item in Model.Collections)
                {
                  <div class="col-xl-3 col-md-6 mb-xl-0 mb-4 g-4">
                  <div class="card card-blog card-plain">
                    <div class="card-header p-0 mt-n4 mx-3">
                      <a class="d-block shadow-xl border-radius-xl">
                        <img src="../assets/img/home-decor-1.jpg" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
                      </a>
                    </div>
                    <div class="card-body p-3">
                      <p class="mb-0 text-sm">@item.Name</p>
                      <a href="javascript:;">
                        <h5>
                          @item.Theme
                        </h5>
                      </a>
                      <p class="mb-4 text-sm">
                        @item.Description
                      </p>
                      <div class="d-flex align-items-center justify-content-between">
                        <a type="button" asp-page ="Collection" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm mb-0">View collection</a>
                        <div class="avatar-group mt-2">
                          <a  href="javascript:;"  class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Elena Morison">
                            <img alt="Image placeholder" src="../assets/img/team-1.jpg">
                          </a>
                          <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Ryan Milly">
                            <img alt="Image placeholder" src="../assets/img/team-2.jpg">
                          </a>
                          <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Nick Daniel">
                            <img alt="Image placeholder" src="../assets/img/team-3.jpg">
                          </a>
                          <a href="javascript:;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Peterson">
                            <img alt="Image placeholder" src="../assets/img/team-4.jpg">
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                }
                
              </div>
            </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-7 mt-4">
          <div class="card">
            <div class="card-header pb-0 px-3">
              <h6 class="mb-0">Lastest items was added to collection</h6>
            </div>
            <div class="card-body pt-4 p-3">
              <ul class="list-group">
                @foreach (var item in Model.Items)
                {
                  <li class="list-group-item border-0 d-flex p-4 mb-2 bg-gray-100 border-radius-lg">
                  <div class="d-flex flex-column">
                    <h6 class="mb-3 text-sm">@item.Name</h6>
                    <span class="mb-2 text-xs">Collection Name: <span class="text-dark font-weight-bold ms-sm-2">@item</span></span>
                    <span class="mb-2 text-xs">Author: <span class="text-dark ms-sm-2 font-weight-bold">@item.Name</span></span>
                    <span class="text-xs">Theme: <span class="text-dark ms-sm-2 font-weight-bold">@item.Collection.Theme</span></span>
                  </div>
                </li>
                }

                
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-5 mt-4">
          <div class="card h-100 mb-4">
            <div class="card-header pb-0 px-3">
              <div class="row">
                <div class="col-md-6">
                  <h6 class="mb-0">Newest actions</h6>
                </div>
                
              </div>
            </div>
            <div class="card-body pt-4 p-3">
              <h6 class="text-uppercase text-body text-xs font-weight-bolder mb-3">Last commentaries</h6>
              <ul class="list-group">
               @foreach (var item in Model.Items)
               {
                <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                  <div class="d-flex align-items-center">
                    <button asp-page="Item/@item.Id" class="btn btn-icon-only btn-rounded btn-outline-success mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center"><i class="material-icons text-lg">comment</i></button>
                    <div class="d-flex flex-column">
                      <h6 class="mb-1 text-dark text-sm">@item.Name</h6>
                      <span class="text-xs">@item.CreatedTime</span>
                    </div>
                  </div>
                  <div class="d-flex align-items-center text-success text-gradient text-sm font-weight-bold">
                   @item.Collection.Name
                  </div>
                </li>
               }
                
              </ul>
              <h6 class="text-uppercase text-body text-xs font-weight-bolder my-3">Last Likes</h6>
              <ul class="list-group">
               
                @foreach (var item in Model.Comments)
                {
                  <li class="list-group-item border-0 d-flex justify-content-between ps-0 mb-2 border-radius-lg">
                  <div class="d-flex align-items-center">
                    <button class="btn btn-icon-only btn-rounded btn-outline-dark mb-0 me-3 p-3 btn-sm d-flex align-items-center justify-content-center"><i class="material-icons text-lg">favorite</i></button>
                    <div class="d-flex flex-column">
                      <h6 class="mb-1 text-dark text-sm">@item.Item</h6>
                      <span class="text-xs">@item.CreatedTime</span>
                    </div>
                  </div>
                  <div class="d-flex align-items-center text-dark text-sm font-weight-bold">
                    @item.Item.Name
                  </div>
                </li>
                }
                
              </ul>
            </div>
          </div>
        </div>
      </div>
</div>
