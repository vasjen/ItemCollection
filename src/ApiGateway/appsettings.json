{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Yarp": {
    "routes": {
      "identity": {
        "clusterId": "identity",
        "match": {
          "path": "identity/{**catch-all}"
        },
        "Transforms":  [ 
        {
          "PathRemovePrefix": "identity"
        }
      ]
      }
      
    },
    "clusters": {
      "identity": {
        "destinations": {
          "destination1": {
            "address": "http://identity:80/"
          }
        }
      },
      "collection": {
        "destinations": {
          "destination1": {
            "address": "http://collection:80/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
