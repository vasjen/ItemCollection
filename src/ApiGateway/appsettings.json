{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "Yarp": {
    "routes": {
      "identity": {
        "clusterId": "identity",
        "match": {
          "path": "identity/{**catch-all}"
        },
        "Transforms":  [ 
        {
          "PathRemovePrefix": "identity"
        }
      ]
      },
      "collection": {
        "clusterId": "collection",
        "match": {
          "path": "collection/{**catch-all}"
        },
        "Transforms":  [ 
        {
          "PathRemovePrefix": "collection"
        }
      ]
      },
      
      "item": {
        "clusterId": "item",
        "match": {
          "path": "item/{**catch-all}"
        }
      }
    },
    "clusters": {
      "identity": {
        "destinations": {
          "destination1": {
            "address": "https://localhost:7195/"
          }
        }
      },
      "collection": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:5254/"
          }
        }
      },
      "item": {
        "destinations": {
          "destination1": {
            "address": "http://localhost:5254/"
          }
        }
      }
    }
  },
  "AllowedHosts": "*"
}
